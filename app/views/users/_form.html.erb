<%= form_for(@user) do |f| %>
 
  <%= render "shared/form_errors", record: @user %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  
  <div>
    <%= f.submit "Update!", class:"btn btn-primary" %>
  </div>

<% end %>
